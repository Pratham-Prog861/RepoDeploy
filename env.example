# you can you Firbase Integration for this but you need Blaze plan for this , right now i am using supabase and vercel which is free

GEMINI_API_KEY=your_api_key_here

# Firebase Configuration (Optional - keeping for backward compatibility)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Supabase Configuration (New - Required for free deployment)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# GitHub Integration (Required for repository access)
GITHUB_TOKEN=ghp_your-github-personal-access-token

# Optional: Custom domain for deployments
NEXT_PUBLIC_DEPLOYMENT_DOMAIN=yourdomain.com

# Deployment Configuration
# Set to 'simulation' for demo mode, 'vercel' for real deployments
DEPLOYMENT_MODE=simulation

# Vercel Configuration (only needed for real deployments)
VERCEL_TOKEN=your_api_key_here
# VERCEL_TEAM_ID=your_team_id_here
